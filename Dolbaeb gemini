<script>
    // Этот код запускается ВМЕСТЕ с игрой
    YaGames.init().then(ysdk => {
        window.ysdk = ysdk;
        // Сообщаем Яндексу, что загрузка 100%, чтобы кнопка «Играть» сработала
        ysdk.features.LoadingProgress.report({ progress: 100 });
        console.log('Yandex SDK Ready');
    }).catch(err => {
        console.error('SDK error:', err);
    });
</script>

